@model List<AppTaxiSol.Web.Models.ViajeViewModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h1 class="text-center">Viajes</h1>
<a class="btn btn-primary" asp-action="Create">Crear Nuevo Viaje</a>
<table class="table table-striped">
    <tr>
        <th>Fecha Inicio</th>
        <th>Fecha Fin</th>
        <th>Desde</th>
        <th>Hasta</th>
        <th>Acciones</th>
    </tr>
    @foreach (var viaje in Model)
    {
        <tr>
            <td>@viaje.FechaInicio</td>
            <td>@viaje.FechaFin</td>
            <td>@viaje.Desde</td>
            <td>@viaje.Hasta</td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@viaje.Id">Editar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@viaje.Id">Eliminar</a>
            </td>
        </tr>
    }
</table>
