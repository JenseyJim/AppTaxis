@model List<AppTaxiSol.Web.Models.UsuarioViewModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h1 class="text-center">Usuarios</h1>
<a class="btn btn-primary" asp-action="Create">Crear Nuevo Usuario</a>
<table class="table table-striped">
    <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Documento</th>
        <th>Acciones</th>
    </tr>
    @foreach (var usuario in Model)
    {
        <tr>
            <td>@usuario.Nombre</td>
            <td>@usuario.Apellido</td>
            <td>@usuario.Documento</td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@usuario.Id">Editar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@usuario.Id">Eliminar</a>
            </td>
        </tr>
    }
</table>